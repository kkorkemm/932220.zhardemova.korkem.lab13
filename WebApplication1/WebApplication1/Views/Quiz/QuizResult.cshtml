@model List<QuizQuestion>

@{
    ViewData["Title"] = "Quiz Result";
}

<h1>Quiz Result</h1>

<table class="table">
    <thead>
        <tr>
            <th>Выражение</th>
            <th>Ваш ответ</th>
            <th>Правильный ответ</th>
            <th>Результат</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in Model)
        {
            <tr>
                <td>@question.Expression</td>
                <td>@question.UserAnswer</td>
                <td>@question.Answer</td>
                <td>@(question.IsCorrect ? "Правильно" : "Неправильно")</td>
            </tr>
        }
    </tbody>
</table>

<p>Правильных ответов: @ViewBag.CorrectAnswers из @ViewBag.TotalQuestions</p>